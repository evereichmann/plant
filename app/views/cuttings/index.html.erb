<div class="ui container">
<div class="ui top attached tabular menu" >
<div class="item">
<h1><%= link_to 'Orders', orders_path, method: :get %></h1>
</div>
<div class="item">
<h1><%= link_to 'Plants', plants_path, method: :get %></h1>
</div>
<div class="item active">
<h1><%= link_to 'Cuttings', cuttings_path, method: :get %></h1> 
</div>
<div class="item">
<h1>Dashboard</h1>
</div>
<div class="right menu">
    <div class="item">
<%= button_to "logout", destroy_user_session_path, method: :delete, class:"ui big button"%>
</div>
</div>
</div>

<div class="ui bottom attached segment">

<%= link_to '<button type="button" class="ui button">New Cutting</button>'.html_safe, new_cutting_path %>

<h1>Cuttings</h1>
<table class="ui celled unstackable table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag</th>
      <th>Cutting date</th>
      <th>Generation</th>
      <th>Sold</th>
      <th>Price</th>
      <th>Parent</th>
      <th>Parent type</th>
      <th>Mother</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuttings.each do |cutting| %>
    <% if cutting.mother != true %>
      <tr>
        <td><%= cutting.name %></td>
        <td><%= cutting.tag %></td>
        <td><%= cutting.cutting_date %></td>
        <td><%= cutting.generation %></td>
        <td><%= cutting.sold %></td>
        <td><%= cutting.price %></td>
        <td><%= cutting.parent_id %></td>
        <td><%= cutting.parent_type %></td>
        <td><%= cutting.mother %></td>
        <td><%= link_to 'Show', cutting %></td>
        <td><%= link_to 'Edit', edit_cutting_path(cutting) %></td>
        <td><%= link_to 'Destroy', cutting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>
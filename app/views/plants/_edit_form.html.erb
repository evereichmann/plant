<%= form_with(model: plant, local: true) do |form| %>
  <% if plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
        <% plant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tag %>
    <%= form.number_field :tag %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.number_field :unit_price , step: :any %>
  </div>

  <div class="field">
    <%= form.label :arrival_date %>
    <%= form.date_select :arrival_date %>
  </div>

  <div class="field">
    <%= form.label :condition %>
    <%= form.select :condition, [ 'good', 'excellent', 'dead', 'poor', 'fair' ] %>
  </div>

  <div class="field">
    <%= form.label :recovery_date %>
    <%= form.date_select :recovery_date, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :sold %>
    <%= form.check_box :sold %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price , step: :any %>
  </div>
  
<div class="field">
    <%= form.label :pot_number %>
    <%= form.collection_select :container_id, @container.reject{|container| container.plant_name != plant.name }, :id , :container_number_and_plant_name, include_blank: true %>
</div>

  <div class="actions">
    <%= form.submit class: "ui button"%>
  </div>
  
<% end %>